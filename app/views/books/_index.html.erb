<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>本のタイトル</th>
      <th>感想</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
  <% books.each do |book| %>
      <tr>
        <td>
          <%= image_tag user.get_profile_image(100,100) %> 
        </td>
        <td>
          <a href='users.id'></a>
        </td>
        <td>
          <span><%= link_to book.title, "/books/#{book.id}" %></span>
        </td>
        <td>
          <%= book.body %>
        </td>
      <tr>
    <% end %>
  </tbody>
</table>
