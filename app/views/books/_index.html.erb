<h1>Book detail</h1>
<table class = "table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>本のタイトル</th>
      <th>感想</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% books.each do |book| %>
        <tr>
          <td>
             <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image(100,100) %>
             <% end %>
          </td>
          <td>
            <span><%= link_to book.title, "/books/#{book.id}" %></span>
          </td>
          <td>
            <%= book.body %>
          </td>
        <tr>
      <% end %>
  </tbody>
</table>
