 <div>
    <%= flash[:notice] %>
</div>
 <div class = "contaoner px-5 px-sm-0" >
    <div class = "row" >
        <div class = "col-md-3">
          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class = "table" >
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class = "btn btn-outline-secondary btn-block">
            <%= link_to edit_user_path(@user) do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </div>

          <h1>New book</h1>

          <% if @book.errors.any? %>
            <%= @book.errors.count %>errors prohibited this obj from being saved:
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
          <% end %>

          <%= form_with model: @book do |f| %>
          <h4>本のタイトル</h4>
          <%= f.text_field :title %>
            <h4>感想</h4>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
            <% end %>
        </div>
         <div class = "col-md-8 offset-md-1">
          <h1>Book detail</h1>
          <table class = "table" >
            <tr>
              <td>
                <%= image_tag @user.get_profile_image(100,100) %><br>
                <%= link_to @user.name, "/users/#{@user.id}" %>
              </td>
              <td>
                <span><%=link_to @book.title, "/books/#{@book.id}" %></span>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                  <%= link_to "Destroy", book_path(@book), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              </td>
            </tr>
          </table>
  </div>
</div>


