<div class = "container">
 <div class = "row">
  <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>User info</h1>
    <% if @user.errors.any? %>
     <%= @user.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @user do |f| %>
     <div class = "form-group">
      <h4>Name</h4>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%>
     </div>
     <div class = "form-group">
      <h4>ProfileImage</h4>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
     </div>
     <div class = "form-group">
      <h4>Introduction</h4>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"introduction"%>
     </div>
     <div class = "form-group">
      <%= f.submit "Update User" %>
     </div>
    <% end %>
  </div>
 </div>
</div>
