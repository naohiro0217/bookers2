<div class="container">
    <div class="row justify-content-center">
      <h1>Users</h1>
    </div>
    <table>
      <thead>
        <th>image</th>
        <th>name</th>
        <th colspan = "3"></th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag @user.get_profile_image(100,100) %>
          </td>
          <td>
            <%= user.name %>
          </td>
          <td>
            <%= link_to "show", user_path(user.id) %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
    <div>
<h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <table class = "table" >
        <tbody>
            <tr>
                <th>name</th>
                <th><%= @user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
            </tr>
        </tbody>
    </table>


  <% end %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
</div>

