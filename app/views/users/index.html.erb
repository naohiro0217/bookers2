<div class="container px-5 px-sx-0">
  <div class = "row">
    <div class ="col-md-3">
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>

        <table class = "table" >
          <tbody>
              <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
              </tr>
              <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
              </tr>
          </tbody>
        </table>
         <div class = "btn btn-outline-secondary btn-block">
                <%= link_to edit_user_path(@user) do %>
                    <i class="fas fa-user-cog"></i>
                <% end %>
         </div>
          <h1>New book</h1>


              <%= form_with model: @book do |f| %>
              <h4>本のタイトル</h4>
              <%= f.text_field :title %>
              <h4>感想</h4>
              <%= f.text_area :body %>
              <%= f.submit 'Create Book', class: "btn btn-sm btn-success" %>
              <% end %>
      </div>

      <div class = "col-md-8 offset-md-1">
        <h1>Users</h1>

          <table class = "table">
            <thead>
              <th>image</th>
              <th>name</th>
              <th colspan = "3"></th>
            </thead>
            <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                 
                    <%= image_tag user.get_profile_image(100,100) %>
                
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= link_to "Show", user_path(user.id) %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>

    </div>
  </div>
</div>

