<div>
    <%= flash[:notice] %>
</div>

<div class = "contaoner px-5 px-sm-0" >
    <div class = "row" >
        <div class = "col-md-3">
            <h2>User info</h2>
            <%= image_tag @user.get_profile_image(100,100) %>
            <table class = "table" >
                <tbody>
                    <tr>
                        <th>name</th>
                        <th><%= @user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @user.introduction %></th>
                    </tr>
                </tbody>
            </table>

            <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

            <h1>NewBook</h1>

            <% if @book.errors.any? %>
                <%= @book.errors.count %>errors prohibited this obj from being saved:
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>

            <%= form_with model: @book do |f| %>
                <h4>本のタイトル</h4>
                <%= f.text_field :title %>
                <h4>感想</h4>
                <%= f.text_area :body %>
                <%= f.submit 'create book' %>
            <% end %>
        </div>
        <div class = "col-md-8 offset-md-1">
            <h1>Books</h1>
                <table class = "table table-hover table-inverse" >
                    <thead>
                        <tr>
                            <th></th>
                            <th>本のタイトル</th>
                            <th>感想</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>

                    <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td>
                                <%= image_tag @user.get_profile_image(100,100) %>
                            </td>
                            <td>
                                <span><%= link_to book.title, "/books/#{book.id}" %></span>
                            </td>
                            <td>
                                <%= book.body %>
                            </td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
        </div>
    </div>
</div>