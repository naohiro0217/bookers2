<div>
<h2>User info</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  
    <table class = "table" >
        <tbody>
            <tr>
                <th>name</th>
                <th><%= @user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
            </tr>
        </tbody>
    </table>

  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>

<h1>NewBook</h1>

<% if @book.errors.any? %>
 <%= @book.errors.count %>errors prohibited this obj from being saved:
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @book do |f| %>
    <h4>本のタイトル</h4>
      <%= f.text_field :title %>
    <h4>感想</h4>
      <%= f.text_area :body %>
      <%= f.submit 'create book' %>
<% end %>

<h1>Book detail</h1>
  <table>
 <thead>
  <tr>
   <th></th>
   <th>本のタイトル</th>
   <th>感想</th>
   <th colspan="3"></th>
  </tr>
 </thead>

 <tbody>
 <% @books.each do |book| %>
  <tr>
    <td>
        <%= image_tag @user.get_profile_image(100,100) %>
    </td>
    <td>
      <a href='users.id'></a>
    </td>
   <td>
   <span><%= link_to book.title, "/books/#{book.id}" %></span>
   </td>
   <td>
   <%= book.body %>
   </td>


  </tr>

 <% end %>
 </tbody>
</table>
